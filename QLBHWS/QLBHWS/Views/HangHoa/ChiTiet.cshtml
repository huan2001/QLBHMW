@model HangHoa
@{
    ViewBag.Title = "ChiTiet";
    Layout = "~/Views/Shared/_QLBanHangLayout.cshtml";
}

<div class="container">
    <div class="col-lg-3">
        @Html.Action("_ChungLoai1Partial", "ChungLoai");
    </div>
    <div class="col-lg-9">
        <div class="col-md-9">

            <div class="row" id="productMain">
                <div class="col-sm-6">
                    <div id="mainImage">
                        <img src="~/Photos/@Model.Hinhs[0]" alt="" class="img-responsive" style="height:450px">
                    </div>

                    <div class="ribbon sale">
                        <div class="theribbon">SALE</div>
                        <div class="ribbon-background"></div>
                    </div>
                    <!-- /.ribbon -->

                    <div class="ribbon new">
                        <div class="theribbon">NEW</div>
                        <div class="ribbon-background"></div>
                    </div>
                    <!-- /.ribbon -->

                </div>
                <div class="col-sm-6">
                    <div class="box">
                        <h3 class="text-center">@Model.Ten</h3>
                        <p class="goToDescription">
                            <a href="#details" class="scroll-to">Scroll to product details, material &amp; care and sizing</a>
                        </p>
                        <p class="price">@Model.GiaBan.ToString("#,##0 VNĐ")</p>

                        <p class="text-center buttons">
                            <a href="basket.html" class="btn btn-primary"><i class="fa fa-shopping-cart"></i> Add to cart</a>
                            <a href="basket.html" class="btn btn-default"><i class="fa fa-heart"></i> Add to wishlist</a>
                        </p>


                    </div>

                    <div class="row" id="thumbs">

                        <div class="col-xs-4">
                            <a href="~/Photos/@Model.Hinhs[0]" class="thumb active">
                                <img src="~/Photos/@Model.Hinhs[0]" alt="" class="img-responsive" style="height:70px">
                            </a>
                        </div>
                        @if (Model.Hinhs.Count > 1)
                        {
                            <div class="col-xs-4">
                                <a href="~/Photos/@Model.Hinhs[1]" class="thumb">
                                    <img src="~/Photos/@Model.Hinhs[1]" alt="" class="img-responsive" style="height:70px">
                                </a>
                            </div>
                        }
                        @if (Model.Hinhs.Count > 2)
                        {
                            <div class="col-xs-4">
                                <a href="~/Photos/@Model.Hinhs[2]" class="thumb">
                                    <img src="~/Photos/@Model.Hinhs[2]" alt="" class="img-responsive" style="height:70px">
                                </a>
                            </div>
                        }


                    </div>
                </div>

            </div>


            <div class="box" id="details">

                <h4>Thông tin chi tiết</h4>
                <p>
                    @Model.MoTa
                </p>
                <ul>
                    <li>Mã số: @Model.MaSo</li>
                    <li>Tên hàng: @Model.Ten</li>
                    <li>Loại hàng: @Model.ChungLoai.Ten</li>

                </ul>
                <h4>Thông số kỹ thuật</h4>
                

                <blockquote>
                    <p>@Model.ThongSoKyThuat</p>
                </blockquote>

                <hr>
                
            </div>



        </div>

    </div>
</div>


