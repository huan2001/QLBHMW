@{
    var ChungLoaiItems = ViewBag.ChungLoais as List<ChungLoaiViewModels> ;
    
}

<div class="panel panel-default sidebar-menu">

    <div class="panel-heading">
        <h3 class="panel-title">Chủng Loại</h3>
    </div>

    <div class="panel-body">
        <ul class="nav nav-pills nav-stacked category-menu">
            @foreach (var item in ChungLoaiItems)
            {

                string chungLoaiAct = null;
                if (TempData["CLID"] is int idCL && idCL == item.ID)
                {
                        chungLoaiAct = "active";
                }
                <li class="@chungLoaiAct">
                    <a href="@Url.Action("TraCuuTheoChungLoai","HangHoa",new { id=item.ID })">@item.Ten <span class="badge pull-right">@item.SoMatHang</span></a>

                </li>
            }


        </ul>

    </div>
</div>