@{
    var ChungLoaiItems = ViewBag.ChungLoais as List<ChungLoai>;
}

<div class="panel panel-default sidebar-menu">

    <div class="panel-heading">
        <h3 class="panel-title">Chủng Loại</h3>
    </div>

    <div class="panel-body">
        <ul class="nav nav-pills nav-stacked category-menu">
            @foreach (var item in ChungLoaiItems)
            {
                <li>
                    <a href="@Url.Action("TraCuuTheoChungLoai","HangHoa",new { id=item.ID })">@item.Ten @*<span class="badge pull-right">42</span>*@</a>

                </li>
            }


        </ul>

    </div>
</div>